{% case template %}
  {% when "product.pf-382b4452" %}
    {% render 'ws-events' %}
    <script>
      (function () {
        document.addEventListener("DOMContentLoaded", async () => {
          //const customerTags = "{{ customer.tags }}";
          //console.log({ customerTags });
